---
interface Props {
  icon: string
  label: string
  href?: string
}

const { icon, label, href } = Astro.props
const Tag = href ? "a" : "div"
---

<Tag
  href={href}
  target={href ? "_blank" : undefined}
  rel={href ? "noopener noreferrer" : undefined}
  class="flex w-24 cursor-pointer flex-col items-center gap-1 rounded-lg p-2 hover:bg-white/20 md:w-20"
>
  <span class="material-symbols-outlined text-6xl text-white drop-shadow-lg md:text-5xl">{icon}</span>
  <span class="text-center text-sm font-medium text-white drop-shadow-md md:text-xs">{label}</span>
</Tag>
