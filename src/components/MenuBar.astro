---
const currentDate = new Date()
const timeString = currentDate.toLocaleTimeString("en-US", {
  hour: "numeric",
  minute: "2-digit",
  hour12: true,
})
const dateString = currentDate.toLocaleDateString("en-US", {
  weekday: "short",
  month: "short",
  day: "numeric",
})
---

<header class="flex h-7 w-full items-center justify-between bg-white/20 px-4 backdrop-blur-xl">
  <div class="flex items-center gap-4">
    <svg class="h-4 w-4 fill-white" viewBox="0 0 384 512">
      <path d="M318.7 268.7c-.2-36.7 16.4-64.4 50-84.8-18.8-26.9-47.2-41.7-84.7-44.6-35.5-2.8-74.3 20.7-88.5 20.7-15 0-49.4-19.7-76.4-19.7C63.3 141.2 4 184.8 4 273.5q0 39.3 14.4 81.2c12.8 36.7 59 126.7 107.2 125.2 25.2-.6 43-17.9 75.8-17.9 31.8 0 48.3 17.9 76.4 17.9 48.6-.7 90.4-82.5 102.6-119.3-65.2-30.7-61.7-90-61.7-91.9zm-56.6-176.6c27.3-32.4 24.8-61.9 24-72.5-24.1 1.4-52 16.4-67.9 34.9-17.5 19.8-27.8 44.3-25.6 71.9 26.1 2 49.9-11.4 69.5-34.3z"/>
    </svg>
    <span class="text-sm font-semibold text-white">Finder</span>
    <nav class="flex items-center gap-4 text-sm text-white/90">
      <span>File</span>
      <span>Edit</span>
      <span>View</span>
      <span>Go</span>
      <span>Window</span>
      <span>Help</span>
    </nav>
  </div>
  <div class="flex items-center gap-3 text-sm text-white">
    <span class="material-symbols-outlined text-lg">battery_full</span>
    <span class="material-symbols-outlined text-lg">wifi</span>
    <span class="material-symbols-outlined text-lg">search</span>
    <span class="material-symbols-outlined text-lg">toggle_on</span>
    <span>{dateString}</span>
    <span>{timeString}</span>
  </div>
</header>
